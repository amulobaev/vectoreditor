<ScrollViewer x:Class="VectorEditor.Control.VectorEditorControl"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="clr-namespace:VectorEditor.Control"
              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
    <local:CustomCanvas HorizontalAlignment="Left" VerticalAlignment="Top"
                        Width="2720" Height="2720"
                        Owner="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:VectorEditorControl}}" />
</ScrollViewer>
